generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"  
  url      = env("DATABASE_URL")
}

model Startup {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId  
 companyName        String
  logo               String
  jobsUrl            String
  location           String
  category           String
  companyDescription String
  jobDescription     String
  applicationLink    String
  tags               String[]
  jobRole            String
  remoteFriendly     String?
  email              String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

   

  @@map("startups")
}

// ... enum remains the same ...
enum Category {
  SOFTWARE
  HARDWARE
  AI
  SAAS
  GAMING
  EDUCATION
  FINTECH
  HEALTHTECH
  EDTECH
  SECURITY
  CRYPTO
  OTHER
}